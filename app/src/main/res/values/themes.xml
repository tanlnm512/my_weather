<resources>

    <style name="Theme.MyWeather.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <item name="windowSplashScreenBackground">@mipmap/ic_launcher_background</item>
        <item name="postSplashScreenTheme">@style/Theme.MyWeather</item>
    </style>

    <style name="Theme.MyWeather" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorAccent</item>

        <item name="android:windowBackground">@color/appBackground</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.Material3.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.Material3.Dark" />
</resources>